<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createaccount1">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/acoount"
        android:id="@+id/profile_icon"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:text="@string/create_ur_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_ur_acc"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_icon"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint_line"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/create_ur_acc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:text="@string/pls_fill_ur_rsp_dtls"
        android:textSize="12sp"
        android:textColor="@color/warm_grey"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:weightSum="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/hint_line"
        app:layout_constraintBottom_creator="1"
        android:id="@+id/name_lay">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/phone1"/>
        <EditText
            android:id="@+id/merchant_ph_no"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:hint="@string/dummyphno">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:weightSum="1"

        app:layout_constraintTop_toBottomOf="@+id/name_lay"
        app:layout_constraintBottom_creator="1"
        android:id="@+id/merchant_name">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/name"/>
        <EditText
            android:id="@+id/mrcht_name"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:hint="@string/merchant_name">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:weightSum="1"

        app:layout_constraintTop_toBottomOf="@+id/merchant_name"
        app:layout_constraintBottom_creator="1"
        android:id="@+id/password_layout">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pass"/>
        <EditText
            android:id="@+id/mrcht_pwd"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="bottom"
            android:hint="@string/pwd">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:weightSum="1"

        app:layout_constraintTop_toBottomOf="@+id/password_layout"
        app:layout_constraintBottom_creator="1"
        android:id="@+id/confirm__pwd_layout">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/confirm"/>
        <EditText
            android:id="@+id/confirm_pwd"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="bottom"
            android:hint="@string/confirm_pwd">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_creator="1"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:weightSum="1"

        app:layout_constraintTop_toBottomOf="@+id/confirm__pwd_layout"
        app:layout_constraintBottom_creator="1"
        android:id="@+id/shop_lay">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/maile"/>
        <EditText
            android:id="@+id/mrcht_email"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="bottom"
            android:hint="@string/email">
        </EditText>
    </LinearLayout>

    <TextView
        android:text="@string/conti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/continue_btn"
        app:layout_constraintTop_toBottomOf="@+id/shop_lay"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:background="@color/login_btn"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="@dimen/five_space"
        android:textSize="@dimen/sixteen"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tclogo"
        android:id="@+id/imageView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="@string/add_merchant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/add_merchant"
        android:textColor="@color/faded_white"
        android:textSize="@dimen/banner_name"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
