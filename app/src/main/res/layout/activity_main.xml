<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp">
    <LinearLayout
        android:background="@drawable/glow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        android:id="@+id/header"
        android:scaleType="centerCrop"
        android:contentDescription="@string/dummy"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintTop_creator="1"
        app:layout_constraintRight_creator="1"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/favorite"
        android:layout_marginBottom="26dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingTop="16dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/a_s_ttclogo"
                android:id="@+id/logo"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:gravity="center_horizontal">
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/prof_pic"
               android:layout_width="@dimen/profile_pic"
               android:layout_height="@dimen/profile_pic"
               android:minHeight="@dimen/profile"
               android:minWidth="@dimen/profile"
               android:src="@drawable/a_s_tcustomericon"
               android:onClick="Profile"/>
            <TextView
                android:id="@+id/prof_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Prof_name"
                android:textSize="15.0sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shop name"
                android:textSize="14.0sp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/a_s_tmessage"
                android:id="@+id/msg"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout >

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_editor_absoluteX="359dp"
        app:layout_editor_absoluteY="104dp"
        android:id="@+id/favorite"
        android:background="@color/skobeloff"
        android:padding="5dp"
        android:contentDescription="@string/dummy"
        app:layout_constraintTop_creator="1"
        app:layout_constraintRight_creator="1"
        app:layout_constraintBottom_creator="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.29000002"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.56"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.332"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/in_process"
                android:gravity="center_horizontal"
                android:textColor="@color/white_smoke"/>
            <TextView
                android:id="@+id/in_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white_smoke"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_weight="0.001"
            android:layout_height="match_parent"
            android:background="@color/white_smoke"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.332"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dispacted"
                android:gravity="center_horizontal"
                android:textColor="@color/white_smoke"/>
            <TextView
                android:id="@+id/dispatched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white_smoke"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_weight="0.001"
            android:layout_height="match_parent"
            android:background="@color/white_smoke"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.332"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivered"
                android:gravity="center_horizontal"
                android:textColor="@color/white_smoke"/>
            <TextView
                android:id="@+id/delivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white_smoke"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="@string/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/old_lavender"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/favorite"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/favorite"
        android:layout_marginLeft="70dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_orders"
        android:textColor="@color/cadmium_orange"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp" />

    <TextView
        android:text="Orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@color/old_lavender"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/total_orders"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/total_orders"
        android:layout_marginLeft="16dp" />

    <com.github.lzyzsd.circleprogress.DonutProgress
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/donut_progress"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/view2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"

        app:donut_finished_color="@color/forest_green"/>
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/dark_gray"
        app:layout_constraintTop_toTopOf="@+id/donut_progress"
        app:layout_constraintBottom_toBottomOf="@+id/donut_progress"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:id="@+id/view2"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:text="@string/in_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Processed"
        android:textColor="@color/princeton_orange"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintBaseline_toBaselineOf="@+id/today_in_process"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/view2"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="@string/dispacted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pending"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintRight_toRightOf="@+id/Processed"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="9dp"
        app:layout_constraintLeft_toLeftOf="@+id/Processed"
        android:textColor="@color/manatee"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/today_in_process"
        android:textColor="@color/princeton_orange"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/Processed"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintBottom_toTopOf="@+id/pending"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/today_pending"
        app:layout_constraintTop_toTopOf="@+id/pending"
        android:textColor="@color/manatee"
        app:layout_constraintBottom_toBottomOf="@+id/pending"
        app:layout_constraintRight_toRightOf="@+id/today_in_process"
        app:layout_constraintLeft_toLeftOf="@+id/today_in_process" />

    <LinearLayout
        android:background="@drawable/arcbackdrop"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/donut_progress"
        android:weightSum="1"
        android:paddingTop="10dp"
        android:id="@+id/linearLayout3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:onClick="Product">
            <LinearLayout
                android:id="@+id/products"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.332"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a_s_tproductsicon"

                    android:gravity="center_horizontal"/>
                <TextView
                    android:padding="@dimen/small_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/products"
                    android:textColor="@color/white_smoke"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.332"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="Customers">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a_s_tcustomericon"

                    android:gravity="center_horizontal"/>
                <TextView
                    android:padding="@dimen/small_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/retailer"
                    android:textColor="@color/white_smoke"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/transactions"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.332"
                android:gravity="center"
                android:onClick="Blank"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a_s_ttransactions"

                    android:gravity="center_horizontal"/>
                <TextView
                    android:padding="@dimen/small_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction"
                    android:textColor="@color/white_smoke"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
            <LinearLayout
                android:id="@+id/broadcasts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.332"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="Broadcast">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a_s_tbroadcasticon"

                    android:gravity="center_horizontal"/>
                <TextView
                    android:padding="@dimen/small_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/broadcast"
                    android:textColor="@color/white_smoke"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/events"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.332"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="Events">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a_s_tevents"

                    android:gravity="center_horizontal"/>
                <TextView
                    android:padding="@dimen/small_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offer"
                    android:textColor="@color/white_smoke"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reports"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.332"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="Reports">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a_s_treport"

                    android:gravity="center_horizontal"/>
                <TextView
                    android:padding="@dimen/small_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reports"
                    android:textColor="@color/white_smoke"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="@string/delivered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintBottom_toTopOf="@+id/Processed"
        android:layout_marginBottom="8dp"
        android:textColor="@color/forest_green"
        app:layout_constraintLeft_toLeftOf="@+id/Processed"
        app:layout_constraintRight_toRightOf="@+id/Processed" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/today_delivered"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/today_in_process"
        app:layout_constraintRight_toRightOf="@+id/today_in_process"
        android:textColor="@color/forest_green"/>




</android.support.constraint.ConstraintLayout>
